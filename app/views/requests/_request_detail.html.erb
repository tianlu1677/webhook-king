<div class="card mt-2">
  <div class="card-header">
    <i class="fa fa-align-justify"></i>
    <h6>Request details</h6>
    <%= link_to  "custom action log", custom_action_logs_request_path(request.uuid), class: 'btn btn-warning btn-sm' if request.custom_action_logs.exists? %>  
  </div>
  <div class="card-body">
    <table class="table table-responsive-sm table-sm table-borderless table-striped">
      <tbody>
      <tr>
        <td><%= request.req_method || 'GET' %></td>
        <td><%= "/r/#{request.token_uuid}" %></td>
      </tr>
      <tr>
        <td>Host</td>
        <td><%= request.hostname %></td>
      </tr>
      <tr>
        <td>Date</td>
        <td><%= request.created_at %></td>
      </tr>
      <tr>
        <td>Size</td>
        <td><%= request.content_length %> bytes</td>
      </tr>
      <tr>
        <td>Time</td>
        <td><%= request.content_length %> bytes</td>
      </tr>
      <tr>
        <td>ID</td>
        <td><%= request.uuid %></td>
      </tr>
      <tr>
        <td>Note</td>
        <td>Note</td>
      </tr>
      </tbody>
    </table>
  </div>
</div>