let dom = document.getElementById("card-list-group")

if (dom) {
  dom.innerHTML = `<%= j render '/requests/left_list_item', request: @request, current_request: nil%>${dom.innerHTML}`

  let a = document.title.match(/^\((\d+)\)/)
  if(a){
    let next_id = parseInt(a[1]) + 1
    document.title = document.title.replace(a[0], `(${next_id})`)
  }else{
    document.title = `(1) ${document.title}`
  }
}

<%if @request %>
const ele = document.getElementById('requests-count')
ele.innerHTML = parseInt(ele.textContent) + 1

<%end %>